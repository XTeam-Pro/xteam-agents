# XTeam Agents Configuration
# Copy this file to .env and fill in your values

# ====================
# LLM Configuration
# ====================

# Provider: openai or anthropic
LLM_PROVIDER=openai

# API Keys (at least one required based on provider)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Model name (e.g., gpt-4o, gpt-4-turbo, claude-3-5-sonnet-20241022)
LLM_MODEL=gpt-4o

# Model parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# ====================
# Embedding Configuration
# ====================

# OpenAI embedding model (always uses OpenAI for embeddings)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ====================
# Database Connections
# ====================

# Redis (Episodic Memory)
REDIS_URL=redis://localhost:6379/0

# Qdrant (Semantic Memory)
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-qdrant-api-key  # Optional, for Qdrant Cloud

# Neo4j (Procedural Memory)
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=xteam_password
NEO4J_DATABASE=neo4j

# PostgreSQL (Audit Log)
POSTGRES_URL=postgresql://postgres:xteam_password@localhost:5432/xteam
POSTGRES_PASSWORD=xteam_password

# ====================
# Server Configuration
# ====================

SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ====================
# Task Configuration
# ====================

# Timeout for individual tasks (seconds)
TASK_TIMEOUT_SECONDS=300

# Maximum retry attempts
MAX_RETRIES=3

# Maximum replan iterations before failing
MAX_REPLAN_ITERATIONS=3

# ====================
# Logging
# ====================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Output format: true for JSON, false for console
LOG_JSON=true

# ====================
# Domain Configuration
# ====================

# Base domain for all services
DOMAIN=example.com

# Let's Encrypt email for SSL certificates
LETSENCRYPT_EMAIL=cert@example.com

# ====================
# n8n Integration (Optional)
# ====================

N8N_URL=http://localhost:5678
# N8N_API_KEY=your-n8n-api-key
N8N_USER=admin
N8N_PASSWORD=xteam_password
